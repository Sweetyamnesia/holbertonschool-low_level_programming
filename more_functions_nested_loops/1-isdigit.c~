#include "main.h"
#include <stdio.h>
#include <ctype.h>

/**
* _isdigit - This function test if a character is a hexadecimal number.
* @c: the character to test.
* Return: return 1 if c is a digit and otherwise return 0.
**/

int _isdigit(int c)
{
if (isdigit(c)
{
return (1);
}
else
{
return (0);
}
}
}
